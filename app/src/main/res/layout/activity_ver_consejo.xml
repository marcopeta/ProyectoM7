<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerConsejoActivity">

    <TextView
        android:id="@+id/tvTitleV"
        android:layout_width="306dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/tvTextV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTextV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTextV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAutorV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleV" />

    <TextView
        android:id="@+id/tvAutorV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="34dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTextV"
        app:layout_constraintTop_toBottomOf="@+id/tvTextV" />
</androidx.constraintlayout.widget.ConstraintLayout>